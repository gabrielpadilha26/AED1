#include <stdio.h>
#include <limits.h>

#define INF 99999999

int main() {
    int N, M, C, K;

    while (scanf("%d %d %d %d", &N, &M, &C, &K) && (N || M || C || K)) {
        int adj[250][250];

        for (int i = 0; i < N; i++) {
            for (int j = 0; j < N; j++) {
                adj[i][j] = -1;
            }
        }

        for (int i = 0; i < M; i++) {
            int u, v, p;
            scanf("%d %d %d", &u, &v, &p);
            adj[u][v] = p;
            adj[v][u] = p;
        }

        int dist[250];
        int visited[250];

        for (int i = 0; i < N; i++) {
            dist[i] = INF;
            visited[i] = 0;
        }

        dist[K] = 0;

        for (int i = 0; i < N; i++) {
            int u = -1;
            int min_val = INF;

            for (int j = 0; j < N; j++) {
                if (!visited[j] && dist[j] < min_val) {
                    min_val = dist[j];
                    u = j;
                }
            }

            if (u == -1 || dist[u] == INF) break;

            visited[u] = 1;

            if (u == C - 1) break;

            for (int v = 0; v < N; v++) {
                if (adj[u][v] != -1) {
                    if (u < C - 1) {
                        if (v == u + 1) {
                            if (dist[u] + adj[u][v] < dist[v]) {
                                dist[v] = dist[u] + adj[u][v];
                            }
                        }
                    } else {
                        if (dist[u] + adj[u][v] < dist[v]) {
                            dist[v] = dist[u] + adj[u][v];
                        }
                    }
                }
            }
        }

        printf("%d\n", dist[C - 1]);
    }

    return 0;
}
