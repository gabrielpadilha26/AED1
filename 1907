#include <stdio.h>

#define MAX 1050

typedef struct {
    int r, c;
} Point;

char grid[MAX][MAX];
Point stack[MAX * MAX];
int N, M;

void floodFill(int r, int c) {
    int top = 0;
    stack[top].r = r;
    stack[top].c = c;
    top++;
    
    grid[r][c] = 'o';

    int dr[] = {-1, 1, 0, 0};
    int dc[] = {0, 0, -1, 1};

    while (top > 0) {
        top--;
        Point p = stack[top];

        for (int i = 0; i < 4; i++) {
            int nr = p.r + dr[i];
            int nc = p.c + dc[i];

            if (nr >= 0 && nr < N && nc >= 0 && nc < M && grid[nr][nc] == '.') {
                grid[nr][nc] = 'o';
                stack[top].r = nr;
                stack[top].c = nc;
                top++;
            }
        }
    }
}

int main() {
    scanf("%d %d", &N, &M);

    for (int i = 0; i < N; i++) {
        scanf("%s", grid[i]);
    }

    int clicks = 0;

    for (int i = 0; i < N; i++) {
        for (int j = 0; j < M; j++) {
            if (grid[i][j] == '.') {
                clicks++;
                floodFill(i, j);
            }
        }
    }

    printf("%d\n", clicks);

    return 0;
}
