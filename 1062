#include <stdio.h>

int stack[1000];

int main() {
    int N;
    while (scanf("%d", &N) && N) {
        while (1) {
            int target[1000];
            if (scanf("%d", &target[0]) && target[0] == 0) {
                printf("\n");
                break;
            }
            for (int i = 1; i < N; i++)
                scanf("%d", &target[i]);

            int top = -1;
            int next = 1;
            int ok = 1;

            for (int i = 0; i < N; i++) {
                int want = target[i];

                while (next <= want) {
                    stack[++top] = next;
                    next++;
                }

                if (top >= 0 && stack[top] == want)
                    top--;
                else {
                    ok = 0;
                    break;
                }
            }

            printf(ok ? "Yes\n" : "No\n");
        }
    }
    return 0;
}
