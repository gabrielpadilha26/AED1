#include <stdio.h>

int main() {
    int n;

    while (scanf("%d", &n) == 1 && n != 0) {
        if (n == 1) {
            printf("Discarded cards:\n");
            printf("Remaining card: 1\n");
            continue;
        }

        int queue[101];
        int front = 0;
        int rear = n;
        int i;

        for (i = 0; i < n; i++) {
            queue[i] = i + 1;
        }

        printf("Discarded cards: ");

        int first_discard = 1;
        while (rear - front > 1) {
            if (!first_discard) {
                printf(", ");
            }
            printf("%d", queue[front]);
            front++;
            first_discard = 0;

            queue[rear] = queue[front];
            rear++;
            front++;
        }

        printf("\n");
        printf("Remaining card: %d\n", queue[front]);
    }

    return 0;
}
