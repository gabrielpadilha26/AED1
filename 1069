#include <stdio.h>
#include <string.h>

int main() {
    int n;
    scanf("%d", &n);
    getchar(); // Consome o caractere de nova linha após o número

    while (n--) {
        char mina[1001];
        fgets(mina, sizeof(mina), stdin);

        int diamantes = 0;
        int abertos = 0;
        int i;

        for (i = 0; i < strlen(mina); i++) {
            if (mina[i] == '<') {
                abertos++;
            } else if (mina[i] == '>') {
                if (abertos > 0) {
                    diamantes++;
                    abertos--;
                }
            }
        }
        printf("%d\n", diamantes);
    }

    return 0;
}
